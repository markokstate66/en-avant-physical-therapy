@page "/team"
@inject PhysicalTherapy.Web.Services.ContentService ContentService

<PageTitle>Our Team - En Avant Physical Therapy</PageTitle>

<!-- Page Header -->
<section class="page-header">
    <div class="container">
        <h1>Meet Our Team</h1>
        <p>Get to know the dedicated professionals who are passionate about helping your child succeed.</p>
    </div>
</section>

<!-- Team Section -->
<section class="section">
    <div class="container">
        <div class="row">
            @foreach (var member in teamMembers)
            {
                <TeamMemberCard TeamMember="@member" />
            }
        </div>
    </div>
</section>

<!-- Why Our Team Section -->
<section class="section section-light">
    <div class="container">
        <div class="section-title">
            <h2>Why Our Team Stands Out</h2>
            <p>What makes En Avant therapists different from the rest.</p>
        </div>
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="card-icon mx-auto">
                            <i class="bi bi-mortarboard"></i>
                        </div>
                        <h4>Advanced Training</h4>
                        <p>Our therapists hold advanced certifications in pediatric physical therapy and pursue ongoing education in the latest treatment techniques.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="card-icon mx-auto" style="background: linear-gradient(135deg, var(--secondary), var(--secondary-dark));">
                            <i class="bi bi-heart"></i>
                        </div>
                        <h4>Genuine Passion</h4>
                        <p>Every team member chose pediatric therapy because they love working with children. That enthusiasm shows in every session.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card h-100">
                    <div class="card-body text-center">
                        <div class="card-icon mx-auto" style="background: linear-gradient(135deg, var(--accent), var(--accent-dark));">
                            <i class="bi bi-chat-heart"></i>
                        </div>
                        <h4>Great Communicators</h4>
                        <p>We believe in keeping parents informed and involved. You'll always know what we're working on and why.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Join Our Team Section -->
<section class="section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="hero-image-placeholder" style="height: 300px; background: linear-gradient(135deg, var(--primary), var(--secondary));">
                    <i class="bi bi-person-plus"></i>
                </div>
            </div>
            <div class="col-lg-6">
                <h2>Join Our Team</h2>
                <p>Are you a passionate pediatric physical therapist looking for a rewarding career? We're always looking for dedicated professionals who share our commitment to exceptional care.</p>
                <p>At En Avant, you'll find:</p>
                <ul>
                    <li>A supportive, collaborative work environment</li>
                    <li>Competitive compensation and benefits</li>
                    <li>Opportunities for professional development</li>
                    <li>A chance to make a real difference in children's lives</li>
                </ul>
                <a href="/contact" class="btn btn-primary">Contact Us About Opportunities</a>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <h2>Ready to Meet Us in Person?</h2>
        <p>Schedule a visit to tour our facility and meet the team.</p>
        <a href="/book" class="btn btn-secondary btn-lg">Book a Visit</a>
    </div>
</section>

@code {
    private List<TeamMember> teamMembers = new();

    protected override void OnInitialized()
    {
        teamMembers = ContentService.GetTeamMembers();
    }
}
